{
	"default_module": "powerline.segments.common",
	"segments": {
		"above": [
			{
				"left": [
					{
						"module": "powerline.segments.shell",
						"name": "mode"
					},
					{
						"name": "hostname",
						"priority": 30,
						"args": {
							"only_if_ssh": false,
							"exclude_domain": true
						}
					},
					{
						"name": "user",
						"priority": 30
					},
					{
						"name": "cwd",
						"args": {
							"use_path_separator": true
						}
					},
					{
						"name": "branch",
						"priority": 10
					}
				],
				"right": [
					{
						"module": "powerline.segments.shell",
						"name": "last_pipe_status",
						"priority": 10
					}
				]
			}
		],
		"left": [
			{
				"type": "string",
				"contents": "$",
				"highlight_group": ["cwd"]
			}
		],
		"right": []
	}
}
