[user]
	name = Sean Fisk
	email = sean@seanfisk.com
[core]
	excludesfile = ~/.gitignore_global
[alias]
	all = !git add --all $(pwd -P) # add all new and changed files in the repo, EVEN IF IN A SUBDIRECTORY
	ci = commit
	cm = commit -m # commit with a message
	ca = commit --all # all tracked
	cam = commit --all -m # commit tracked with a message
	call = !git all && git ci # add all and commit
	callm = !git all && git cm # add all and commit with a message
	st = status
	co = checkout
	freebase = pull --rebase
	up = pull --rebase
	remotebranch = !sh -c 'git push origin HEAD:refs/heads/$0 && git checkout --track -b $0 origin/$0'
	trackbranch = !sh -c 'git checkout --track -b $0 origin/$0'
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	br = branch
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[gui]
	fontui = -family \"Lucida Grande\" -size 14 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"PrimaSansMono BT Roman\" -size 14 -weight normal -slant roman -underline 0 -overstrike 0
[merge]
	tool = opendiff
[branch]
	autosetupmerge = true
[push]
	default = tracking
[clean]
	requireForce = false